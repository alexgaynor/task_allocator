<h1>Welcome to your Task Dashboard</h1>

<div id="user-wrap">
	<div id="user-cont">
		<% if @user.prof_pic %>
			<img src="<%= @user.prof_pic %>" width="300" height="300" />
		<% else %>
			<div style="width:300;height:300;background:black;"></div>
		<% end %>
		<ul>
			<li><%= @user.firstname %> <%= @user.lastname %></li>
			<li><%= @user.username %></li>
			<li><%= @user.email %></li>
		</ul>
		<ul>
			<li><%= @user.phone_num %></li>
			<li>Karma</li>
			<li>Flakes</li>
			<li><%= @user.ownertasks.first.name %></li>
		</ul>
	</div>

</div>
<%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
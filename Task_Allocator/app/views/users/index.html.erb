<!-- add authenticity token -->
<%= javascript_tag "window._token = '#{form_authenticity_token}';" %>
<!-- check if user signed in -->
<% if current_user %>
  <%= javascript_tag "window._current_user_username = '#{current_user.username}';" %>
<% else %>
  <%= javascript_tag "window._current_user_username = '';" %>
<% end %>

<!-- menu -->
<div id="login-wrap">
  <div id="logged_in_menu" class="inactive">
    <%= link_to 'Update Profile', edit_user_registration_path %> | 
    <a href="#" id="logout_link">Logout</a>
  </div>
  <div id="logged_out_menu" class="inactive">
    <a href="#" data-reveal-id="sign_up_modal">Sign Up</a> | 
    <a href="#" data-reveal-id="sign_in_modal">Sign In</a>  
  </div>
</div>

<!-- slideout modals -->
<%= render partial: "sign_up" %>
<%= render partial: "sign_in" %>